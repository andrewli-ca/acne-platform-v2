{
  "extends": "@acme/config/typescript/library",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "erasableSyntaxOnly": true,

    /* Plugins */
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCaseOnly"
        }
      }
    ]
  },
  "include": ["src", "src/**/*.d.ts", ".storybook"]
}
